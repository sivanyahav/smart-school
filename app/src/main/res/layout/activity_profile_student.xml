<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen2"
    tools:context=".view.profileStudent">

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/white"
        app:srcCompat="@drawable/profile" />

    <!--שורה 1-->
    <TextView
        android:id="@+id/full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileImage"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="60dp"
        android:text="Full Name:"
        android:textSize="25dp"
        android:textStyle="bold"
        />



    <TextView
        android:id="@+id/fill1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileImage"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="65dp"
        android:text=""
        android:textSize="20dp" />


    <!--שורה 2-->

    <TextView
        android:id="@+id/ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/full_name"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="20dp"
        android:text="ID:"
        android:textSize="25dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/fill2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fill1"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="28dp"
        android:text=""
        android:textSize="20dp"
        />


    <!--שורה 3-->


    <TextView
        android:id="@+id/name_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ID"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="20dp"
        android:text="Grade:"
        android:textSize="25dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/fill3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fill2"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="28dp"
        android:text=""
        android:textSize="20dp"
        />

    <!--שורה 4-->


    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_school"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="20dp"
        android:text="Email:"
        android:textSize="25dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/fill4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fill3"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="28dp"
        android:text=""
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/ChangePicture"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_below="@+id/fill4"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#3F51B5"
        android:text="CHANGE PROFILE PICTURE" />



</RelativeLayout>