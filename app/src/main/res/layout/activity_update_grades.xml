<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen2"
    tools:context=".controller.updateGrades">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:text="Update Grade"
        android:textColor="@color/white"
        android:textSize="45dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="100dp"
        android:text="student name:"
        android:textSize="30sp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/fillName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="107dp"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/student_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/student_name"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="30dp"
        android:text="student ID:"
        android:textSize="30sp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/fillID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/student_name"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="37dp"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/student_ID"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="30dp"
        android:text="grade:"
        android:textSize="30sp"
        android:textStyle="bold" />



    <EditText
        android:id="@+id/fillGrade"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_below="@+id/student_ID"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="30dp"
        android:text=""
        android:textSize="20sp"
        android:hint="Enter Grade"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:background="#30ffffff"
        android:textStyle="bold"
        />


    <Button
        android:id="@+id/updateBtn"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/grade"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#a0a0a0"
        android:layout_marginTop="70dp"
        android:text="Update"

        />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/updateBtn"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#a0a0a0"
        android:layout_marginTop="10dp"
        android:text="back to menu"

        />



</RelativeLayout>